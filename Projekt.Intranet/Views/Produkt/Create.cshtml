@model Projekt.Intranet.Models.Sklep.Produkt

@{
    ViewData["Title"] = "Create";
}
<div class="d-flex justify-content-center align-items-center flex-column">
    <h2 class="mt-4">Dodawanie</h2>
    <div class="col-md-6">
        <form asp-action="Create" class="needs-validation text-white" novalidate>
            <div class="form-group">
                <label asp-for="Nazwa" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="Nazwa" class="form-control form-control-lg border-light btn-dark" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="Opis" class="form-control form-control-lg border-light btn-dark" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="Cena" class="form-control form-control-lg border-light btn-dark" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoUrl" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="FotoUrl" class="form-control form-control-lg border-light btn-dark" />
                <span asp-validation-for="FotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IloscMagazynowa" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="IloscMagazynowa" class="form-control form-control-lg border-light btn-dark" />
                <span asp-validation-for="IloscMagazynowa" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <a asp-action="Index" class="btn btn-dark btn-lg">Back to List</a>
                <input type="submit" value="Create" class="btn btn-dark btn-lg" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
